doctype html
html
    include ../templates/head
    body
        include ../templates/navbar_logged_out

        div.col
            h1 Register
            form.form-horizontal(action="/register" method="post")
                div.form-group
                    label.control-label.col-sm-1(for="username") Username:
                    input.form-control(type="text" name="username" id="username"
                                       placeholder="Enter username" required="required")

                div.form-group
                    label.control-label.col-sm-1(for="password") Password:
                    input.form-control(type="password" name="password" id="password"
                                       placeholder="Enter password" required="required")

                div.form-group
                    div.col-sm-12
                        input.btn.btn-primary.btn-md(type="submit" id="submit")

            p.error #{error}
        